<aside class="left-side sidebar-offcanvas">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="img/avatar3.png" class="img-circle" alt="User Image" />
            </div>
            <div class="pull-left info">
                <p>
                    <a ng-href="/account" class="name_val">{{ info.name }}</a>
                    <a ng-href="/server-status"><i class="fa fa-circle text-red" title="{{ ( online ) ? 'Broker je připojen k burzovnímu serveru' : 'Broker není připojen k burzovnímu serveru' }}" ng-class="(online) ? 'text-green' : 'text-red'"></i></a>
                </p>
                <i id="balance" ng-value="info.accountBalance">
                    {{ info.accountBalance | currency:"$"}}
                </i>
                
            </div>
        </div>

        <br />

        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li>
                <a ng-href="/">
                    <i class="fa fa-th"></i> <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a ng-href="/stockinfo">
                    <i class="fa fa-bar-chart-o"></i> <span>Seznam akcií</span>
                </a>
            </li>
            <li>
                <a ng-href="/mystocks">
                    <i class="fa fa-book"></i> <span>Moje akcie</span>
                </a>
            </li>
            <li>
                <a ng-href="/account">
                    <i class="fa fa-user"></i> <span>Múj účet</span>
                </a>
            </li>
            <li>
                <a ng-href="/history">
                    <i class="fa fa-calendar"></i> <span>Historie</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>

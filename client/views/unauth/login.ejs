
<div class="form-box" id="login-box">
    <div class="header">Uživatelské přihlášení</div>
    <form action="" method="post">
        <div class="body bg-gray">
            <div class="form-group">


            <% if ( typeof message != "undefined" && message != "" ) { %>
                <div class="callout callout-warning login_alert">
                    <h4><%= message %></h4>
                </div>
            <% } %>

                <input type="text" name="username" class="form-control" placeholder="Email"/>
            </div>
            <div class="form-group">
                <input type="password" name="password" class="form-control" placeholder="Heslo"/>
            </div>          
<!--             <div class="form-group stay_logged">
                <input type="checkbox" name="remember_me" id="stay_logged" /> <label for="stay_logged">Zůstat přihlášen</label>
            </div> -->
        </div>
        <div class="footer">                                                               
            <button type="submit" name="submit" class="btn bg-olive btn-block">Přihlásit!</button>  
            
            <!-- <p><a href="/lost-pass">Zapomenuté heslo</a></p> -->
            
            <a href="/registration" class="text-center">Registovat nového uživatele</a>
        </div>
    </form>
</div>
